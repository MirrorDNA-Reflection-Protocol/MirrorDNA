{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mirrordna.org/schemas/identity.schema.json",
  "title": "MirrorDNA Identity Schema",
  "description": "Schema for MirrorDNA identity records (users, agents, systems)",
  "version": "1.0.0",
  "type": "object",
  "required": ["identity_id", "identity_type", "created_at", "public_key"],
  "properties": {
    "identity_id": {
      "type": "string",
      "pattern": "^mdna_(usr|agt|sys)_[a-z0-9_]{12,}$",
      "description": "Unique identity identifier with namespace prefix"
    },
    "identity_type": {
      "type": "string",
      "enum": ["user", "agent", "system"],
      "description": "Type of identity"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of identity creation"
    },
    "public_key": {
      "type": "string",
      "minLength": 20,
      "description": "Base64-encoded Ed25519 public key"
    },
    "metadata": {
      "type": "object",
      "description": "Optional metadata about the identity",
      "properties": {
        "name": {
          "type": "string",
          "description": "Human-readable name"
        },
        "description": {
          "type": "string",
          "description": "Brief description"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Semantic version (for agents)"
        },
        "custom": {
          "type": "object",
          "description": "Application-specific metadata"
        }
      }
    }
  },
  "additionalProperties": false
}
